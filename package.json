{
  "name": "axicreate",
  "description": "Axidraw svg creator app.",
  "version": "0.0.1",
  "private": true,
  "author": {
    "email": "jamesbwills@gmail.com",
    "name": "James Wills"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "dev": "node scripts/watch.mjs",
    "build": "pnpm run build:common && pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
    "build:common": "cd ./packages/common && vite build",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "pnpm run test:common && pnpm run test:main && pnpm run test:preload && pnpm run test:renderer && pnpm run test:e2e",
    "test:e2e": "pnpm run build && vitest run",
    "test:common": "vitest run -r packages/common --passWithNoTests",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,tsx",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "pnpm run typecheck:main && pnpm run typecheck:preload && pnpm run typecheck:renderer",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,tsx,mts,cts,json}\""
  },
  "devDependencies": {
    "@types/node": "18.11.12",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/typography": "^0.16.4",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "@vitejs/plugin-react": "^3.0.0",
    "autoprefixer": "^10.4.13",
    "cross-env": "7.0.3",
    "electron": "22.0.0",
    "electron-builder": "23.6.0",
    "eslint": "^8.39.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-import-resolver-vite": "^1.0.4",
    "eslint-plugin-autofix": "^1.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "happy-dom": "8.1.0",
    "nano-staged": "0.8.0",
    "playwright": "1.27.1",
    "postcss": "^8.4.19",
    "prettier": "^2.8.8",
    "simple-git-hooks": "2.8.1",
    "typescript": "^4.9.5",
    "unplugin-auto-expose": "0.0.4",
    "vite": "4.0.0",
    "vitest": "0.25.6"
  },
  "dependencies": {
    "@lnjs/core": "^0.5.0",
    "@react-three/drei": "^9.66.0",
    "@react-three/fiber": "^8.12.2",
    "@types/three": "^0.149.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "electron-updater": "5.3.0",
    "electron-window-state": "^5.0.3",
    "hotkeys-js": "^3.10.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.5",
    "react-hotkeys-hook": "^4.4.0",
    "react-router-dom": "^6.4.5",
    "react-typography": "^0.16.23",
    "recoil": "^0.7.7",
    "three": "^0.149.0",
    "three-stdlib": "^2.21.9",
    "three-svg-renderer": "^1.0.3",
    "typography": "^0.16.21",
    "typography-theme-noriega": "^0.16.19"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  }
}
